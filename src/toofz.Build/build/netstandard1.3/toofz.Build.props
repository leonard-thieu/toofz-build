<Project>
  <PropertyGroup>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>
      $(AllowedOutputExtensionsInPackageBuildOutputFolder);
      .pdb;
      .xml
    </AllowedOutputExtensionsInPackageBuildOutputFolder>
    <PackageVersion Condition="'$(PackageVersion)' == ''">0.0.0-dev</PackageVersion>
  </PropertyGroup>

  <PropertyGroup>
    <BuildToolsPath>$(MSBuildThisFileDirectory)..\..\tools\netstandard1.3\</BuildToolsPath>
  </PropertyGroup>

  <PropertyGroup>
    <VsTestPath>$(VsInstallRoot)\Common7\IDE\Extensions\TestPlatform\vstest.console.exe</VsTestPath>
  </PropertyGroup>

  <PropertyGroup>
    <OpenCoverToolPath>$(BuildToolsPath)OpenCover\tools\</OpenCoverToolPath>
    <OpenCoverExcludeByAttribute>System.Diagnostics.CodeAnalysis.ExcludeFromCodeCoverageAttribute</OpenCoverExcludeByAttribute>
    <OpenCoverOldStyle>true</OpenCoverOldStyle>
  </PropertyGroup>

  <PropertyGroup>
    <CodecovToolPath>$(BuildToolsPath)Codecov\tools\</CodecovToolPath>
  </PropertyGroup>

  <PropertyGroup>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>

    <NuGetPushToolPath>$(BuildToolsPath)NuGet\tools\</NuGetPushToolPath>
    <PackageServer>https://www.myget.org/F/toofz/api/v2/package</PackageServer>
    <PackageServerApiKey>$(MYGET_API_KEY)</PackageServerApiKey>
    <SymbolPackageServer>https://www.myget.org/F/toofz/symbols/api/v2/package</SymbolPackageServer>
    <SymbolPackageServerApiKey>$(MYGET_API_KEY)</SymbolPackageServerApiKey>
  </PropertyGroup>
</Project>