<Project>
  <PropertyGroup>
    <BuildToolsPath>$(MSBuildThisFileDirectory)..\tools\</BuildToolsPath>
  </PropertyGroup>

  <PropertyGroup>
    <VsTestPath>$(VsInstallRoot)\Common7\IDE\Extensions\TestPlatform\vstest.console.exe</VsTestPath>
  </PropertyGroup>

  <PropertyGroup>
    <OpenCoverToolPath>$(BuildToolsPath)OpenCover\tools\</OpenCoverToolPath>
    <OpenCoverExcludeByAttribute>System.Diagnostics.CodeAnalysis.ExcludeFromCodeCoverageAttribute</OpenCoverExcludeByAttribute>
    <OpenCoverOldStyle>true</OpenCoverOldStyle>
  </PropertyGroup>

  <PropertyGroup>
    <CodecovToolPath>$(BuildToolsPath)Codecov\tools\</CodecovToolPath>
  </PropertyGroup>

  <PropertyGroup>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>
      $(AllowedOutputExtensionsInPackageBuildOutputFolder);
      .pdb;
      .xml
    </AllowedOutputExtensionsInPackageBuildOutputFolder>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>

    <NuGetPushToolPath>$(BuildToolsPath)NuGet\tools\</NuGetPushToolPath>
    <PackageServer Condition="'$(PackageServer)' == ''">https://www.myget.org/F/toofz/api/v2/package</PackageServer>
    <SymbolPackageServer Condition="'$(SymbolPackageServer)' == ''">https://www.myget.org/F/toofz/symbols/api/v2/package</SymbolPackageServer>
    <SymbolPackageServerApiKey Condition="'$(SymbolPackageServerApiKey)' == ''">$(PackageServerApiKey)</SymbolPackageServerApiKey>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix Condition="'$(VersionPrefix)' == ''">0.0.0</VersionPrefix>
    <VersionSuffix Condition="'$(VersionPrefix)' == '0.0.0' AND '$(VersionSuffix)' == ''">dev</VersionSuffix>
  </PropertyGroup>
</Project>